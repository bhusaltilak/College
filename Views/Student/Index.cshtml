@model List<COLLEGE.Models.ViewModels.DetailsViewModel>




@{
    ViewData["Title"] = "All Students";
}


@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<h2 class="mb-3">All Students</h2>

<a asp-action="CreateEdit" class="btn btn-success mb-3">Add New Student</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Address</th>
            <th>Grade</th>
            <th>Parent Name</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentName</td>
                <td>@student.Address</td>
                <td>@student.Grade</td>
                <td>@student.ParentName</td>
                <td>@student.Phone</td>
               
                <td>
                    <a asp-action="CreateEdit" asp-route-id="@student.StudentId" class="btn btn-sm btn-primary me-1">✏️ Edit</a>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this student?');" style="display:inline;">
                        <input type="hidden" name="id" value="@student.StudentId" />
                        <button type="submit" class="btn btn-sm btn-danger">🗑️ Delete</button>
                    </form>
          
                </td>
            </tr>
        }
    </tbody>
</table>
