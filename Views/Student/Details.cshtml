@model COLLEGE.Models.ViewModels.DetailsViewModel

@{
    ViewData["Title"] = "Student Details";
}

<div class="card shadow mb-4">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.PhotoPath" class="img-fluid rounded-start" alt="Photo" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-title">@Model.StudentName</h3>
                <p class="card-text"><strong>Grade:</strong> @Model.Grade</p>
                <p class="card-text"><strong>Address:</strong> @Model.Address</p>
                <p class="card-text"><strong>Status:</strong> @(Model.Status ? "Active" : "Inactive")</p>

                <hr />
                <h5 class="mt-3">Parent Information</h5>
                <p class="card-text"><strong>Parent Name:</strong> @Model.ParentName</p>
                <p class="card-text"><strong>Phone:</strong> @Model.Phone</p>

                <a asp-action="Index1" class="btn btn-secondary mt-3">Back to List</a>
            </div>
        </div>
    </div>
</div>

