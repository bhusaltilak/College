@model List<COLLEGE.Models.ViewModels.DetailsViewModel>




<table class="table table-bordered" style="width:100%">
    <thead class="table-dark">
        <tr>
            <th>Photo</th>
            <th>Name</th>
            <th>Address</th>
            <th>Grade</th>
            <th>ParentName</th>
            <th>Phone</th>
           <th >Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(s.PhotoPath))
                    {
                        <img src="@s.PhotoPath" width="50" class="img-thumbnail" />
                    }
                </td>
                <td>@s.StudentName</td>
                <td>@s.Address</td>
                <td>@s.Grade</td>
                <td>@s.ParentName</td>
                <td>@s.Phone</td>


                <td>
                    <a asp-action="Edit" asp-route-id="@s.StudentId" class="btn btn-sm btn-warning">Edit</a>

                    <a asp-action="Details" asp-route-id="@s.StudentId" class="btn btn-sm btn-info">Details</a>

                    <form asp-action="Delete" asp-route-id="@s.StudentId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this student?');">
                            Delete
                        </button>
                    </form>
                </td>

            </tr>

        }


    </tbody>

</table>
