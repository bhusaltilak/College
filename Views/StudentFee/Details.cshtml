@model COLLEGE.Models.ViewModels.StudentFeeViewModel

@{
    ViewData["Title"] = "Fee Details";
}

<h2>Student Fee Details</h2>

<ul class="list-group">
    <li class="list-group-item"><strong>Student Name:</strong> @Model.StudentName</li>
    <li class="list-group-item"><strong>Grade:</strong> @Model.Grade</li>
    <li class="list-group-item"><strong>Month:</strong> @Model.Month</li>
    <li class="list-group-item"><strong>Amount:</strong> Rs. @Model.Amount</li>
    <li class="list-group-item">
        <strong>Status:</strong>
        <span class="badge bg-@(Model.AmountStatus == "Paid" ? "success" : "danger")">
            @Model.AmountStatus
        </span>
    </li>
</ul>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="CreateEdit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
</div>
