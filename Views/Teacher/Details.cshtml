@model COLLEGE.Models.ViewModels.TeacherViewModel

@{
    ViewData["Title"] = "Teacher Details";
}

<h2 class="mb-4">Teacher Details</h2>

<div class="row">
    <div class="col-md-4 text-center">
        @if (!string.IsNullOrEmpty(Model.PhotoPath))
        {
            <img src="@Model.PhotoPath" class="img-thumbnail" style="max-width: 100%;" />
        }
        else
        {
            <p>No photo available</p>
        }
    </div>

    <div class="col-md-8">
        <ul class="list-group">
            <li class="list-group-item"><strong>Name:</strong> @Model.TeacherName</li>
            <li class="list-group-item"><strong>Subject:</strong> @Model.Subject</li>
        </ul>

        <div class="mt-4">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <a asp-action="CreateEdit" asp-route-id="@Model.TeacherId" class="btn btn-warning">Edit</a>
        </div>
    </div>
</div>
